{
  "name": "task-list-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "api": "json-server --watch db.json --port 5400",
    "gen:t": "openapi-typescript http://localhost:3000/api-json -o src/shared/api/api-types.ts",
    "gen:api": "node openapi/generateApi.mjs",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:storybook/recommended"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@nanostores/query": "^0.3.4",
    "@nanostores/react": "github:nanostores/react",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@reduxjs/toolkit": "^1.9.3",
    "@tailwindcss/vite": "^4.0.14",
    "@tanstack/react-form": "^1.1.0",
    "@tanstack/react-query": "^5.79.0",
    "@tanstack/react-store": "^0.7.3",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-redux": "^7.1.20",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "axios": "^1.4.0",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.3.2",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "json-server": "^1.0.0-beta.3",
    "lodash.throttle": "^4.1.1",
    "lucide-react": "^0.483.0",
    "mobx": "^6.13.7",
    "mobx-react-lite": "^4.1.0",
    "nanostores": "^1.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-id-generator": "^3.0.2",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.10.0",
    "redux-devtools-extension": "^2.13.9",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^2.4.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.14",
    "tw-animate-css": "^1.2.4",
    "vite": "^5.2.9",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.3.2",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@playwright/test": "^1.48.2",
    "@storybook/addon-a11y": "^9.1.8",
    "@storybook/addon-docs": "^9.1.8",
    "@storybook/addon-onboarding": "^9.1.8",
    "@storybook/addon-vitest": "^9.1.8",
    "@storybook/react-vite": "^9.1.8",
    "@types/node": "^20.17.24",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-storybook": "^9.1.8",
    "playwright": "^1.55.1",
    "prettier": "^2.8.8",
    "sass-embedded": "^1.83.4",
    "storybook": "^9.1.8",
    "swagger-typescript-api": "^13.2.8",
    "typescript": "^5.8.2",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^3.2.4"
  }
}
